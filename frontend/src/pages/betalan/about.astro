---
import Layout from "@layouts/Main.astro";
---

<Layout title="About BetaLAN">
</Layout>

<style>
  body {
    @apply bg-cover bg-center bg-fixed;
    background-image: url("/betalan/jungle-background.jpg");
    z-index: 1;
  }

  .gamer-font {
    font-family: "Press Start 2P", cursive;
  }

  /* Vignette */
  body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, transparent, rgba(0, 0, 0, 0.5));
    z-index: -1;
  }

  body::after {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: -2;
  }
</style>